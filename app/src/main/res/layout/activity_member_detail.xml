<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/background_light">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="24dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        
        <ImageView
            android:id="@+id/memberPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_myplaces"
            android:scaleType="centerInside"
            android:padding="20dp"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/memberNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/memberRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: Developer"
        android:textSize="18sp"
        android:textColor="@color/primary_purple"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/memberDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responsible for implementing the UI and Intent logic."
        android:textSize="16sp"
        android:textColor="@color/text_grey"
        android:gravity="center"/>

</LinearLayout>