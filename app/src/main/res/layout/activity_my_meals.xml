<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp">

    <TextView
        android:id="@+id/welcomeHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Daily Progress"
        android:textColor="@color/text_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        android:textColor="@color/text_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeHeading" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calorieCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/userEmailText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories Burned"
                android:textColor="@color/text_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,240 kcal"
                android:textColor="@color/primary_purple"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nutritionButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:text="Nutrition Detail"
        android:textAllCaps="false"
        android:textColor="@color/text_dark"
        app:cornerRadius="12dp"
        app:elevation="2dp"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconTint="@color/primary_purple"
        app:layout_constraintTop_toBottomOf="@id/calorieCard" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/statsButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Calorie Stats"
        android:textAllCaps="false"
        android:textColor="@color/text_dark"
        app:cornerRadius="12dp"
        app:elevation="2dp"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconTint="@color/primary_purple"
        app:layout_constraintTop_toBottomOf="@id/nutritionButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hydrationButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Hydration Tracker"
        android:textAllCaps="false"
        android:textColor="@color/text_dark"
        app:cornerRadius="12dp"
        app:elevation="2dp"
        app:icon="@android:drawable/ic_menu_compass"
        app:iconTint="@color/primary_purple"
        app:layout_constraintTop_toBottomOf="@id/statsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>